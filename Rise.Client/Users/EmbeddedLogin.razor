@page "/embedded-login"

            <div class="col-xl-4 col-6 mx-auto">
                <div class="card card-plain mt-8">
                    <div class="card-header pb-0 text-left">
                       <h3 class="text-white ">@Localizer["Login"]</h3>
                    </div>
                    <div class="card-body">
                          <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
                            <DataAnnotationsValidator />
                            <div class="d-flex flex-column align-items-center px-3">
                                <div
                                    class="d-md-flex flex-column flex-md-row justify-content-center align-items-center mb-2">
                                    <label style="min-width: 80px;">@Localizer["Email"]: </label>
                                    <InputText id="Email" autocomplete="username" @bind-Value="loginModel.Email" class="form-control" />
                                </div>
                                <ValidationMessage For="@(() => loginModel.Email)" />

                                <div
                                    class="d-md-flex flex-column flex-md-row justify-content-center align-items-center mb-2">
                                    <label style="min-width: 80px;">@Localizer["Password"]: </label>
                                    <InputText id="Password" autocomplete="current-password" @bind-Value="loginModel.Password" type="password"
                                        class="form-control" />
                                </div>
                                <ValidationMessage For="@(() => loginModel.Password)" />
                            </div>
                            @* Display custom login error message *@
                            @if (!string.IsNullOrEmpty(loginError))
                            {
                                <div class="text-danger mt-1 p-0">
                                    @loginError
                                </div>
                            }




                            <div class="d-flex flex-column gap-3 pt-5">
                                <div class="d-flex flex-row justify-content-around gap-3">
                                    <button class="btn bg-gradient-primary w-50 mt-4 mb-0"
                                            type="submit">@Localizer["Login"]</button>
                                    <button class="btn bg-gradient-dark w-50 mt-4 mb-0" type="button"
                                            @onclick="HandleCancelClick">@Localizer["Cancel"]</button>
                                </div>
                                <span
                                    class="text-white d-flex align-items-start justify-content-start">@Localizer["NoAccount"]
                                    <a class="info-title pl-2 text-decoration-underline text-opacity-25"
                                       href="/register"> @Localizer["Register"]</a></span>
                            </div>


                            <div class="d-flex flex-column gap-2 m-4">
                                <h5 class="text-danger">Temporary fast login</h5>
                                <div class="d-flex flex-row gap-2">
                                    <div class="text-center ">
                                        <button type="button" class="btn bg-gradient-faded-white w-100 mt-2 mb-4"
                                                @onclick='() => LoginAs("admin")'>Admin</button>
                                    </div>
                                    <div class="text-center ">
                                        <button type="button" class="btn bg-gradient-faded-white w-100 mt-2 mb-4"
                                                @onclick='() => LoginAs("user")'>User</button>
                                    </div>
                                    <div class="text-center ">
                                        <button type="button" class="btn bg-gradient-faded-white w-100 mt-2 mb-4"
                                                @onclick='() => LoginAs("buutagent")'>BUUTAgent</button>
                                    </div>
                                    <div class="text-center ">
                                        <button type="button" class="btn bg-gradient-faded-white w-100 mt-2 mb-4"
                                                @onclick='() => LoginAs("pending")'>Pending</button>
                                    </div>
                                </div>


                            </div>

                          </EditForm>
                    </div>
                </div>
            </div>
